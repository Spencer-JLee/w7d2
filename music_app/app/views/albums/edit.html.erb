<form action="<%= albums_url %>" method="POST">
  <input type="hidden" name="_method" value="PATCH">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <label>Title:
    <input type="text" name="album[title]">
  </label>
  <br>
  <label>Year:
    <input type="number" name="album[year]" min="1900" max="2022">
  </label>
  <br>
  <label>Recorded:
    <input type="radio" id="live" name="album[is_live]" value="Live" 
    <%= album.is_live ? "checked" : "" %> >
    <label for="live">Live</label>
    <br>
    <input type="radio" id="studio" name="album[is_live]" value="Studio"
    <%= !album.is_live ? "checked" : "" %> >
    <label for="studio">Studio</label>
    <br>
  </label>
  <label for="bands">Band:</label>

  <select name="album[band_id]" id="bands">
    <% bands = Band.pluck(:id, :name) %>
    <% bands.each do |band| %>
      <option <%= album.band_id == band.id ? "selected" : "" %> value="band.first"><%= band.last %></option>
    <% end %>
  </select>
  <br>
  <input type="submit" value="UPDATE ALBUM">
</form>